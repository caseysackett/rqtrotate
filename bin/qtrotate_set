require 'rubygems'
require 'rqtrotate'

include RQTRotate

if ARGV.length < 2
  puts "Usage: qtrotate_set [path] [degrees]"
else
  begin
    Movie.new(:file_name => ARGV[0])  do |movie|
      movie.rotation = ARGV[1].to_i
    end
  rescue
    puts "Unable to process #{ARGV[0]}"
  end
end
